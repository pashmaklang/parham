import_once $__dir__ + "/../parham/version.pashm"
import_once @test

@doc "Version parser works"
func test_version_parser()
    test.assertEquals(parham.version.compare('1', '1'), 0)
    test.assertEquals(parham.version.compare('2', '1'), 1)
    test.assertEquals(parham.version.compare('2', '3'), -1)
    test.assertEquals(parham.version.compare('2', '3.11'), -1)
    test.assertEquals(parham.version.compare('3.11', '3.11'), 0)
    test.assertEquals(parham.version.compare('3.11.1', '3.11'), 1)
    test.assertEquals(parham.version.compare('2.11.1', '3.11'), -1)
    test.assertEquals(parham.version.compare('2.11.1', '3.11.2.3'), -1)
    test.assertEquals(parham.version.compare('9.11.1', '3.11.2.3'), 1)
    test.assertEquals(parham.version.compare('9.1a1.1', '3.11.2b.3'), 1)
    test.assertEquals(parham.version.compare('a', 'b'), -1)
    test.assertEquals(parham.version.compare('b', 'a'), 1)
    test.assertEquals(parham.version.compare('1b.3', '1a.7'), 1)
    test.assertEquals(parham.version.compare('1.0', '1.0-a'), 1)
    test.assertEquals(parham.version.compare('1.0-b', '1.0-a'), 1)
    test.assertEquals(parham.version.compare('1.0-b', '1.0-c'), -1)

    # test sort_list
    $sorted = parham.version.sort_list([
        '1.0',
        '3.0',
        '0.0.1',
        '0.8',
        '0.5',
    ])

    test.assertEquals($sorted, ['0.0.1', '0.5', '0.8', '1.0', '3.0'])
endfunc

redefine('TEST', test_version_parser)

if $__ismain__
    TEST()
endif
